<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>tff27-markdown-metadata-generator</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.1.1</Version>
    <Product>Markdown Metadata Generator</Product>
    <Authors>Tiago Fonseca</Authors>
    <PackageId>Tff27.Markdown.Metadata.Generator</PackageId>
    <AssemblyName>Tff27.Markdown.Metadata.Generator</AssemblyName>
    <RootNamespace>Tff27.Markdown.Metadata.Generator</RootNamespace>
    <RepositoryUrl>https://github.com/Tff27/tff27-markdown-metadata-generator</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.8.0" />
  </ItemGroup>

</Project>
